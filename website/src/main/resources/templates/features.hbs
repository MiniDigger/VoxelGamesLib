{{# partial "title"}}
    Features | VoxelGamesLib
{{/partial}}

{{# partial "page"}}
    <div class="new-block">
        <div class="row">
            <div class="col-sm-6 col-md-offset-3">
                <div class="typography-article">
                    <h4>Features</h4>
                </div>
                <div class="clear"></div>
                <div data-wow-delay="0.3s" class="accordeon">
                    {{# each features }}
                        <div class="soft-shadow">
                            <div class="entry">
                                <div class="title">
                                <span class="glyphicon glyphicon-chevron-right"
                                      aria-hidden="true"></span>
                                    {{ name }}
                                    <div class="subtitle">
                                        ({{ fullName }})
                                    </div>
                                    <!-- todo, needs to be inline, should take ::active into consideration too -->
                                </div>
                                <div style="display: none;" class="text">
                                    {{ version }} by {{ author }} <br>
                                    {{description }}<br><br>
                                    <h2>Dependencies</h2>
                                    <!-- todo fix list style -->
                                    <div class=" typography-article" style="margin-bottom: 10px">
                                        <ul class="list-style-3 with-a-bit-less-color">
                                            {{# each dependencies }}
                                                <li style="color: rgba(255, 255, 255, 1);">{{this }}  </li>
                                            {{/each}}
                                        </ul>
                                    </div>
                                    <h2>Params</h2>
                                    <div class=" typography-article" style="margin-bottom: 10px">
                                        <ul class="list-style-3 with-a-bit-less-color">
                                            {{# each params }}
                                                <li style="color: rgba(255, 255, 255, 1);">{{this }}  </li>
                                            {{/each}}
                                        </ul>
                                    </div>
                                </div>
                            </div>
                        </div>
                    {{/each}}
                </div>
            </div>
        </div>
    </div>
{{/partial}}

{{>base.hbs}}